+StateModifier align='[.5,.5]' origin='[.5,.5]'
  +Scrollview
    +Surface size='[undefined, true]'
      .container-fluid
        .row: .text-center: h1 Profile de test
        .row: .col-xs-12
            p.text-center: img.img-circle.img-thumbnail(src=testProfile.avatar128, alt='profile')
        .row
          .col-xs-6: p.text-right Prénom
          .col-xs-6.selectable: p= testProfile.firstName
        .row
          .col-xs-6: p.text-right Nom
          .col-xs-6.selectable: p= testProfile.lastName
        .row
          .col-xs-6: p.text-right Date de naissance
          .col-xs-6.selectable: p= dateOfBirth
        .row
          .col-xs-6: p.text-right Adresse
          .col-xs-6.selectable
            p
              | {{testProfile.streetAdress}} <br>
              | {{testProfile.zipCode}} - {{testProfile.city}} <br>
              | {{testProfile.country}}
        .row
          .col-xs-6: p.text-right: i.fa.fa-phone
          .col-xs-6.selectable: p: a(href=phoneLink)= testProfile.phoneNumber
        .row
          .col-xs-6: p.text-right: i.fa.fa-envelope
          .col-xs-6.selectable: p: a(href=emailLink)= testProfile.email
        +if isLinkedinConnected
          .row: .text-center: p Connecté à LinkedIn
        +else
          .row: .text-center: button#linkedinconnect.btn.btn-lg.btn-success LinkedIn connexion
