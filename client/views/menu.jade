template(name='menu')
  +Surface id='menuHome' class='menubutton' align='[0,.5]' origin='[0,.5]' size='[50, 50]'
    p: i.fa.fa-area-chart
  if rwindow.screen 'lte' 'xsmall'
    +menuHamburger
  else
    +menuTop

template(name='menuHamburger') 
  +Surface id='menuHamburger' class='menubutton' align='[1,.5]' origin='[1,.5]' size='[50, 50]'
    p: i.fa.fa-bars

template(name='menuTop')
  +StateModifier id='menuUnderline' align='[1,1]' origin='[1,1]' size='[100,4]' opacity='0'
    +Surface class='menuUnderline'
      |  
  +SequentialLayout direction='X' align='[1,.5]' origin='[1,.5]' size='[460, 50]' itemSpacing='20'
    +famousEach items
      +Surface id=rt class='menulabel' size='[100, 50]'
        p: i.fa(class=ic)= lbl

template(name='sideMenu')
  +StateModifier id='sideMenu' align='[0,0]' origin='[0,0]' size=side translate='[-200, 0, 200]'
    +Surface class='darkgray' size=side
      | 
    +innerSideMenu

template(name='innerSideMenu')
  if rwindow.screen 'lte' 'xsmall'
    +SequentialLayout direction='Y' size=side align='[0,0]' origin='[0,0]'
      +famousEach items
        +Surface id=rt class=act size='[200, 50]' align='[.5,0]' origin='[.5,0]'
          p: i.fa(class=ic)= lbl
